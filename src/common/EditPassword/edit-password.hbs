<div class="edit-password">
  <div class="body_profile-photo">
    {{{ImageEdit}}}
  </div>
  <div class="f-title-bold edit-password-username">
    {{#if display_name}}
      {{display_name}}
    {{else}}
      {{login}}
    {{/if}}
  </div>
  <div class="form__edit f-normal">
    <div class="form__edit_row">
      <div>
        Старый пароль
      </div>
      {{{oldPassword}}}
    </div>
    <div class="form__edit_row">
      <div>
        Новый пароль
      </div>
      {{{newPassword}}}
    </div>
    <div class="form__edit_row">
      <div>
        Повторите новый пароль
      </div>
      {{{newPasswordTwo}}}
    </div>
  </div>
  {{{buttonSave}}}
</div>
